{
	"Format": "1.24.0",

	"DynamicTokens": 
        [
        //Flowers
        {
        "Name": "FlowerStyle",
        "Value": "{{FlowersSpring}}"
        },
        {
        "Name": "FlowerStyle",
        "Value": "{{FlowersSummer}}",
        "When": {"season": "summer"}
        },
        {
        "Name": "FlowerStyle",
        "Value": "{{FlowersFall}}",
        "When": {"season": "fall"}
        },
        {
        "Name": "ObeliskOptions",
        "Value": "{{YellogObelisk}}",
        "When": {"season": "spring, summer, fall, winter"}
        },
     	],

	"ConfigSchema": {

		//Flowers
        
        "FlowersSpring" : {"AllowValues" : "False, RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow", "Default" : "False"},
        "FlowersSummer" : {"AllowValues" : "False, RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow", "Default" : "False"},
        "FlowersFall"   : {"AllowValues" : "False, WisteriaFBlue, WisteriaFPink, WisteriaFPurple, WisteriaFRed, WisteriaFWhite, WisteriaFYellow", "Default" : "False"},

        //Obelisk
        
        "YellogObelisk": {"AllowValues": "true, false","Default": "true"},
        },

	"Changes":[

		//Tilesheets
		{
     	"Action": "EditImage",
     	"PatchMode": "Replace",
     	"Target": "Maps/{{season}}_cottage",
     	"FromFile": "assets/TileSheets/{{season}}_cottage.png",
     	},
     	{
        "Action": "EditImage",
        "PatchMode": "Replace",
        "Target": "Maps/{{season}}_EastScarpe",
        "FromFile": "assets/TileSheets/{{season}}_EastScarpe.png",
        },  
     	{
        "Action": "EditImage",
        "PatchMode": "Replace",
        "Target": "Maps/{{season}}_inn",
        "FromFile": "assets/TileSheets/{{season}}_inn.png",
        },   	
     	{
        "Action": "EditImage",
        "PatchMode": "Replace",
        "Target": "Maps/{{season}}_lighthouse",
        "FromFile": "assets/TileSheets/{{season}}_lighthouse.png",
        },


        //Obelisk
        {
        "Action": "EditImage",
        "PatchMode": "Replace",
        "Target": "LooseSprites/eastscarpeobelisk_vanilla",
        "FromFile": "assets/TileSheets/eastscarpeobelisk_Yellog.png",
        "When": {
            "YellogObelisk": true,
            }
        },

   		///Flowers

        //Cottage
   		{
      	"Action": "EditImage",
      	"Target": "Maps/spring_cottage",
      	"FromFile": "assets/Flowers/cottage/{{FlowerStyle}}.png",
      	"PatchMode" : "Overlay",
	"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
   		},
   		{
      	"Action": "EditImage",
      	"Target": "Maps/summer_cottage",
      	"FromFile": "assets/Flowers/cottage/{{FlowerStyle}}.png",
      	"PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
   		},
   		{
      	"Action": "EditImage",
      	"Target": "Maps/fall_cottage",
      	"FromFile": "assets/Flowers/cottage/{{FlowerStyle}}.png",
      	"PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
   		},

        //EastScarp
        {
        "Action": "EditImage",
        "Target": "Maps/spring_EastScarp",
        "FromFile": "assets/Flowers/EastScarp/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/summer_EastScarp",
        "FromFile": "assets/Flowers/EastScarp/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/fall_EastScarp",
        "FromFile": "assets/Flowers/EastScarp/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },

        //Inn
        {
        "Action": "EditImage",
        "Target": "Maps/spring_inn",
        "FromFile": "assets/Flowers/inn/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/summer_inn",
        "FromFile": "assets/Flowers/inn/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/fall_inn",
        "FromFile": "assets/Flowers/inn/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },

        //lighthouse
        {
        "Action": "EditImage",
        "Target": "Maps/spring_lighthouse",
        "FromFile": "assets/Flowers/lighthouse/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/summer_lighthouse",
        "FromFile": "assets/Flowers/lighthouse/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
        {
        "Action": "EditImage",
        "Target": "Maps/fall_lighthouse",
        "FromFile": "assets/Flowers/lighthouse/{{FlowerStyle}}.png",
        "PatchMode" : "Overlay",
"When":{"FlowerStyle |contains=RoseWhite, ClematisBlue, WisteriaBlue, WisteriaPink, WisteriaPurple, WisteriaRed, WisteriaWhite, WisteriaYellow":true}
        },
	]
